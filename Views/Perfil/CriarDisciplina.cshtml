<div class="mb-3">
    <form method="post" asp-action="ValidarDisciplina" asp-controller="Perfil">
        <h1>Criar uma nova disciplina</h1>
        <label for="nomeDisciplina" class="form-label">Disciplina:</label>
        <input type="text" class="form-control" id="nomeDiciplina" name="nomeDisciplina">
        <div class="d-flex justify-content-end mt-3">

            <button type="submit" class="btn btn-success mx-2" name="criarDisciplina" value="SIM">Cadastrar</button>
            <button type="submit" class="btn btn-danger mx-2" name="criarDisciplina" value="NAO">Cancelar</button>
        </div>
    </form>
</div>
